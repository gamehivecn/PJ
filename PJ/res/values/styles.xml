<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- theme_FullScreen 是样式的名字，后面是父类样子 -->  
    <style name="theme_FullScreen" parent="android:Theme.Black">  
        <item name="android:windowNoTitle">true</item>  
 <!-- 取出标题 -->  
        <item name="android:windowFullscreen">?android:windowNoTitle</item>  
 <!-- 实现全屏 -->  
    </style>  

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="center_button">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">67dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="function_button">
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="edge_button">
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">3dp</item>
    </style>

    <style name="TzBottom_EditText">
        <item name="android:gravity">center</item>      
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:focusable">false</item>
        <item name="android:singleLine">true</item>
    </style>
    
       <style name="bottom_EditText">
        <item name="android:gravity">center</item>      
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    

</resources>